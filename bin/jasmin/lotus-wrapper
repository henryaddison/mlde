#!/bin/bash
# Wrapper script around commands for interacting with a model to queue on LOTUS on JASMIN

source ~/.bashrc

# >>> conda initialize >>>
__conda_setup="$('/home/users/vf20964/mambaforge/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/users/vf20964/mambaforge/etc/profile.d/conda.sh" ]; then
        . "/home/users/vf20964/mambaforge/etc/profile.d/conda.sh"
    else
        export PATH="/home/users/vf20964/mambaforge/bin:$PATH"
    fi
fi
unset __conda_setup

if [ -f "/home/users/vf20964/mambaforge/etc/profile.d/mamba.sh" ]; then
    . "/home/users/vf20964/mambaforge/etc/profile.d/mamba.sh"
fi
# <<< conda initialize <<<

mamba activate mlde

set -euo pipefail

cd /home/users/vf20964/code/mlde

export DERIVED_DATA=/gws/nopw/j04/furflex/henrya/data/cpmgem-daily/cpmgem-paper-JAMES/
export KK_SLACK_WH_URL=https://hooks.slack.com
export WANDB_EXPERIMENT_NAME="ml-downscaling-emulator"

nvidia-smi

$@
